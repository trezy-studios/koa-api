{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"declaration": true,
		"declarationDir": "types",
		"declarationMap": true,
		"emitDeclarationOnly": true,
    "module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"skipLibCheck": true,
    "target": "esnext"
	},
	"exclude": [
		"**/*.ts",
		".github",
		".yarn",
		"node_modules"
	]
}
